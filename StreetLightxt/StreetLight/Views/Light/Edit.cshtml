@model StreetLight.ViewModels.EditLightViewModel
@{
    ViewData["Title"] = "Edit";

    var photoPath="~/images/" + (Model.ExistingPhotoPath?? "light2.png");
}

<head>
    <style>
        .edit {
            background-color:rgba(252, 246, 246,0.1);
        }
    </style>

</head>
    <form enctype="multipart/form-data" method="post" asp-controller="Light" asp-action="Edit" class="mt-3">

        <div asp-validation-summary="All" class="text-danger"></div>

        <input hidden asp-for="Id" />                <!--hidden 隐藏域-->
        <input hidden asp-for="ExistingPhotoPath" />
      
       

        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>

            <div class="col-sm-10">
                <input asp-for="Name" class="form-control edit" placeholder="请输入路灯名" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <label asp-for="Iswell" class="col-sm-2 col-form-label"></label>

            <div class="col-sm-10">
                <input asp-for="Iswell" class="form-control edit" placeholder="请输入路灯状况" />
            </div>

            <span asp-validation-for="Iswell" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <label asp-for="Lng" class="col-sm-2 col-form-label"></label>

            <div class="col-sm-10">
                <input asp-for="Lng" class="form-control edit" placeholder="请输入经度" />
            </div>

            <span asp-validation-for="Lng" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <label asp-for="Lat" class="col-sm-2 col-form-label"></label>

            <div class="col-sm-10">
                <input asp-for="Lat" class="form-control edit" placeholder="请输入纬度" />
            </div>

            <span asp-validation-for="Lat" class="text-danger"></span>

        </div>


        <div class="form-group row">
            <label asp-for="Iswork" class="col-sm-2 col-form-label"></label>

            <div class="col-sm-10">
                <input asp-for="Iswork" class="form-control edit" placeholder="请输入路灯是否照明" />
            </div>

            <span asp-validation-for="Iswork" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <label asp-for="Control" class="col-sm-2 col-form-label"></label>

            <div class="col-sm-10">
                <input asp-for="Control" class="form-control edit" placeholder="请输入路灯控制器" />
            </div>

            <span asp-validation-for="Control" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="Celle" class="col-sm-2 col-form-label"></label>

            <div class="col-sm-10">
                <input asp-for="Celle" class="form-control edit" placeholder="请输入路灯采集器" />
            </div>

            <span asp-validation-for="Celle" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <label asp-for="Sens" class="col-sm-2 col-form-label"></label>

            <div class="col-sm-10">
                <input asp-for="Sens" class="form-control edit" placeholder="请输入路灯传感器" />
            </div>

            <span asp-validation-for="Sens" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <label asp-for="Photos" class="col-sm-2 col-form-label"></label>

            <div class="col-sm-10">
                <div class="custom-file">

                    <input asp-for="Photos" multiple class="form-control custom-file-input edit" />
                    <label class="custom-file-label edit">请选择照片...</label>
                </div>
            </div>

        </div>



        <div class="form-group row row col-sm-4 offset-4 ">
            <img class="img-thumbnail edit" src="@photoPath" asp-append-version="true" />

        </div>





        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">更新</button>

                <a asp-controller="Light" asp-action="Index" class="btn btn-primary">取消</a>
            </div>
        </div>



        @section Scripts{


            <script type="text/javascript">
                $(document).ready(function () {

                    $('.custom-file-input').on("change", function () {

                        console.log($(this).val());
                        //  var fileName = $(this).val().split("\\").pop();
                        //$(this).next('.custom-file-label').html(fileName);
                        var fileLabel = $(this).next(".custom-file-label");

                        var files = $(this)[0].files;

                        if (files.length > 1) {

                            fileLabel.html("您已经选择了" + files.length + "个文件");

                        } else {

                            fileLabel.html(files[0].name);

                        }


                    });





                });



            </script>


        }


    </form>
